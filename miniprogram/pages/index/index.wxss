/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.header {
  border: 2px none lightgray;
}

.header-text {
  font-size: 18px;
  color: rgba(4, 99, 181);
  letter-spacing:2px;
  font-weight: bold;
}

#icon {
  height: 24px;
}

.image-size {
  display: flex;
  justify-items: left;
}

.random-art {
  border: 2px none lightgray;
  border-radius: 2%;
  margin: 20px;
  background-color: white;
  display: block;
  box-shadow:0 6rpx 10rpx 0rpx #919191af;/*for Android*/
  -webkit-box-shadow:0px 3px 5px 0px #919191af;/*for IOS*/
  overflow: hidden;
  transition: all 3s ease-out;
  opacity: 0;
}

.random-art.show{
  transition: all 3s ease-out;
  opacity: 1;
}

.title {
  margin-top: 20px;
  margin-left: 25px;
  margin-right: 25px;
  font-size: 18px;
  color: #464646;
}

.digest {
  margin-left: 25px;
  margin-right: 25px;
  padding-bottom: 20px;
  font-size: 12px;
  color: #656965;
}